{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types", "src/types"],

    // ðŸ‘‡ Para que tsc no deje .js en src
    "noEmit": false,
    "outDir": "./build-ts",
    "declaration": true,
    "declarationDir": "./build-ts/types"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build-ts"]
}
